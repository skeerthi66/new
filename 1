pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/skeerthi66/new.git'
            }
        }
        stage('Deploy with Chef') {
            steps {
                script {
                    // Execute Chef with the full path
                    sh '''
                    while read file; do
                      recipe_name=$(basename "$file" .rb)
                      /opt/chef-workstation/bin/chef-client --local-mode --runlist "recipe[my_cookbook::${recipe_name}]"
                    done < changed_files.txt
                    '''
                }
            }
        }
    }
}
